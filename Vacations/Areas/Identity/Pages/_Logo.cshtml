@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Options
@using Vacations.Utilities.Settings
@inject IOptions<AppSettings> AppSettings

<div class="page-logo width-mobile-auto m-0 align-items-center justify-content-center p-0 bg-transparent bg-img-none shadow-0 height-9">
    <a asp-controller="Home" asp-action="LandPage" class="page-logo-link press-scale-down d-flex align-items-center">
        <img src="~/img/logo/simple_lab_logo.png" alt="" aria-roledescription="logo">
        <span class="page-logo-text mr-1 mt-1">@AppSettings.Value.Application.Name</span>
    </a>
</div>