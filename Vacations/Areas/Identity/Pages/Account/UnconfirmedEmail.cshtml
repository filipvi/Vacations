@page "{userId}"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Vacations.Areas.Identity.Pages.Account.UnconfirmedEmailModel
@{
    ViewData["Title"] = "Confirm your email.";
    ViewData["PageName"] = "unconfirmed_email";
}



@section PageHeading {
    <div class="col-xl-12">
        <h2 class="fs-xxl fw-500 text-white text-center">
            Nepotvrđena email adresa
            <small class="h3 fw-300 mt-3 mb-5 text-white opacity-60 hidden-sm-down">
                Kako biste se uspješno mogli prijaviti u aplikaciju, morate potvrditi vašu email adresu.
                @*<br>It is ready to go wherever you go!*@
            </small>
        </h2>
    </div>
}

<div class="col-xl-6 ml-auto mr-auto">
    <div class="card p-4 rounded-plus bg-faded">
        <form id="js-unconfirmed_email" method="post">
            <div asp-validation-summary="All" class="alert alert-primary text-danger"></div>
            
            <div class="form-group">
                <label class="form-label" asp-for="Input.Email">Email adresa za verifikaciju</label>
                <input type="email" asp-for="Input.Email" class="form-control" placeholder="Email adresa" required="required" />
                <span class="invalid-feedback" asp-validation-for="Input.Email">Obavezno polje</span>
                <div class="help-block">Email adresa koju želite potvrditi</div>
            </div>
            <div class="row no-gutters">
                <div class="col-md-6 ml-auto text-right">
                    <button id="js-login-btn" type="submit" class="btn btn-block btn-danger btn-lg mt-3">Pošalji</button>
                </div>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}