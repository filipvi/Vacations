@using Vacations.Models.Enums
@model Vacations.Models.ViewModels.Request.DetailsVacationRequestViewModel

@{
    var deleteEnabled = @Model.VacationRequestStatusId == (int) VacationRequestStatusEnums.Pending && @Model.IsDeleted == false ? "" : "d-none";
    var editEnabled = @Model.VacationRequestStatusId == (int) VacationRequestStatusEnums.Pending && @Model.IsDeleted == false ? "" : "d-none";
}

@*Laptop*@
<div class="row d-none d-md-block pt-3 d-lg-none  d-md-block d-lg-none d-lg-block d-xl-none d-xl-block">
    <div class="d-flex float-right mr-2 mb-2">
        <a class="btn btn-danger bg-danger-gradient text-white waves-effect waves-themed mr-2 js-deleteRequest @deleteEnabled">
            <span class="far fa-trash mr-1"></span> Delete vacation request
        </a>
        <a asp-action="Edit" asp-controller="Request" asp-route-id="@Model.Id" class="btn btn-primary bg-primary-gradient waves-effect waves-themed mr-2 js-editRequest @editEnabled">
            <span class="far fa-pen mr-1"></span> Edit data
        </a>
    </div>
</div>


@*Tablet*@
<div class="d-none pt-3 d-sm-block d-md-none">
    <div class="col-lg-12">
        <div class="frame-wrap justify-content-center">
            <a class="btn btn-danger bg-danger-gradient text-white waves-effect btn-block waves-themed mr-2 js-deleteRequest @deleteEnabled">
                <span class="far fa-trash mr-1"></span> Delete vacation request
            </a>
            <a asp-action="Edit" asp-controller="Request" asp-route-id="@Model.Id" class="btn btn-primary btn-block bg-primary-gradient waves-effect waves-themed mr-2 @editEnabled">
                <span class="far fa-pen mr-1"></span> Edit data
            </a>
        </div>
    </div>
</div>

@*Mobile*@
<div class="row d-block pt-3 d-sm-none">
    <div class="col-lg-12">
        <div class="frame-wrap justify-content-center">
            <a class="btn btn-danger bg-danger-gradient text-white waves-effect btn-block waves-themed mr-2 js-deleteRequest @deleteEnabled">
                <span class="far fa-trash mr-1"></span> Delete vacation request
            </a>
            <a asp-action="Edit" asp-controller="Request" asp-route-id="@Model.Id" class="btn btn-primary btn-block bg-primary-gradient waves-effect waves-themed mr-2 @editEnabled">
                <span class="far fa-pen mr-1"></span> Edit data
            </a>
        </div>
    </div>
</div>