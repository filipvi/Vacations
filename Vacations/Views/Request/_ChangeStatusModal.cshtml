@model Vacations.Models.ViewModels.Request.ChangeStatusViewModel

<div class="modal fade show" id="changeStatusModal" tabindex="-1" role="dialog" style="display: block; padding-right: 15px;" aria-modal="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header bg-primary-700">
                <h4 class="modal-title fw-500">
                    Choose evaluation status
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        <i class="far fa-times text-white"></i>
                    </span>
                </button>
            </div>

            <div class="modal-body">
                @*hidden fields*@
                <input asp-for="Id" type="hidden"/>
                <input asp-for="CurrentStatusId" type="hidden"/>

                <div class="row">
                    <div class="col-12">
                        <div class="panelTagCustom">
                            Current request status: @Model.CurrentStatus
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="StatusId" class="form-label"></label>
                            @Html.DropDownListFor(x => x.StatusId, Model.StatusSelectList, "...", new {@class = "select2 form-control js-ddlStatus"})
                            <span asp-validation-for="StatusId" class="customValidationError"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row js-statusMessageContainer d-none">
                    <div class="col-xl-12 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" type="text" id="js-description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="customValidationError"></span>
                        </div>
                    </div>
                </div>
            </div>
            <partial name="_ChangeStatusModalButtonsTemplate"/>

        </div>
    </div>
</div>



<script type="text/javascript">
    $(function () {
        //allow validation framework to parse DOM
        $.validator.unobtrusive.parse($("#formUpdateClientData"));
    });
</script>