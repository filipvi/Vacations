@model Vacations.Models.ViewModels.Domain.DetailsCompanyViewModel

@*Laptop*@
<div class="row d-none d-md-block d-lg-none d-md-block d-lg-none d-lg-block d-xl-none d-xl-block">
    <div class="d-flex mt-6">
        <a asp-controller="Domain" asp-action="Companies"
           class="btn btn-secondary waves-effect waves-themed ml-auto mr-2">
            <span class="far fa-undo mr-2"></span> Return
        </a>
        <button class="btn btn-danger waves-effect waves-themed mr-2 js-deleteCompany">
            <span class="far fa-trash mr-2"></span> Delete company
        </button>
        <a asp-controller="Domain" asp-action="EditCompany" asp-route-id="@Model.Id"
           class="btn btn-warning waves-effect waves-themed mr-2">
            <span class="far fa-edit mr-2"></span> Edit company
        </a>
    </div>
</div>


@*Tablet*@
<div class="d-none d-sm-block d-md-none">
    <div class="row mt-4">
        <div class="col-12">
            <a asp-controller="Domain" asp-action="Companies"
               class="btn btn-secondary btn-block waves-effect waves-themed mr-2">
                <span class="far fa-undo mr-2"></span> Return
            </a>
            <button class="btn btn-danger btn-block waves-effect waves-themed mr-2 js-deleteCompany">
                <span class="far fa-trash mr-2"></span> Delete company
            </button>
            <a asp-controller="Domain" asp-action="EditCompany" asp-route-id="@Model.Id"
               class="btn btn-warning btn-block waves-effect waves-themed mr-2">
                <span class="far fa-edit mr-2"></span> Edit company
            </a>
        </div>
    </div>
</div>


@*Mobile*@
<div class="row d-block d-sm-none">
    <div class="col-lg-12">
        <div class="frame-wrap mt-3">
            <a asp-controller="Domain" asp-action="Companies"
               class="btn btn-secondary btn-block waves-effect waves-themed mr-2">
                <span class="far fa-undo mr-2"></span> Return
            </a>
            <button class="btn btn-danger btn-block waves-effect waves-themed mr-2 js-deleteCompany">
                <span class="far fa-trash mr-2"></span> Delete company
            </button>
            <a asp-controller="Domain" asp-action="EditCompany" asp-route-id="@Model.Id"
               class="btn btn-warning btn-block waves-effect waves-themed mr-2">
                <span class="far fa-edit mr-2"></span> Edit company
            </a>
        </div>
    </div>
</div>